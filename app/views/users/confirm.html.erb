<h1>確認画面</h1>
<%= form_with(model: @user, url: user_path, local: true) do |form| %>
  <%= image_tag(@user.image.url) if @post.image && @user. %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "投稿する" %>
<% end %>
<%= form_with(model:@user, url:new_user_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "戻る", name: "back" %>
<% end %>